[global]
baseAddress = 0xFE
locale = work

mqttServer = localhost
mqttPort = 1883
mqttReconnectInterval = 10

# mrbusInterfaceType = ci2
# mrbusPort = /dev/ttyUSB0

[sensor:basement/temperature]
srcAddr = 0x20
pktType = S
dataType = float16
dataStart = 0
dataFormat = %%.1f

[sensor:basement/humidity]
srcAddr = 0x20
pktType = S
dataType = uint8
dataStart = 2

[sensor:basement/batteryVoltage]
srcAddr = 0x20
pktType = S
dataType = uint8
dataStart = 3
dataFormat = %%.1f
evalFunc = d / 10.0

